{
    "ignore": {
        "root": [
            "**"
        ]
    },
    "monorepo": {
        "backend": {
            "type": "python",
            "dir": "backend",
            "build_command": "pip install -r requirements.txt",
            "start_command": "uvicorn main:app --host 0.0.0.0 --port $PORT"
        },
        "frontend": {
            "type": "nextjs",
            "dir": "frontend",
            "build_command": "npm install && npm run build",
            "start_command": "npm start"
        }
    }
}